generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model blog_posts {
  id              String    @id
  slug            String
  language        String
  title           String
  excerpt         String
  content         String
  author          String
  readTime        String
  tags            String[]
  image           String?
  icon            String?
  published       Boolean   @default(false)
  createdAt       DateTime  @default(now())
  updatedAt       DateTime
  canonicalUrl    String?
  keywords        String[]
  metaDescription String?
  metaTitle       String?
  ogImage         String?
  publishedAt     DateTime?
  scheduledAt     DateTime?
  editorType      String    @default("markdown")
  translationGroup String?

  @@unique([slug, language])
  @@index([translationGroup])
  @@index([language, published])
  @@index([publishedAt])
  @@index([scheduledAt])
}

model users {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String
  role      String   @default("admin")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model admin_settings {
  id        String   @id @default(uuid())
  key       String   @unique
  value     Json
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Internal Analytics - raw pageview/event data
model analytics_events {
  id         String   @id @default(uuid())
  sessionId  String   @map("session_id")
  userId     String?  @map("user_id") // Browser fingerprint hash for unique users
  path       String
  event      String   @default("pageview") // pageview, tool_usage, click, etc.
  referrer   String?
  country    String?  @db.Char(2)
  city       String?
  deviceType String?  @map("device_type") // mobile, desktop, tablet
  browser    String?
  os         String?
  language   String?  @db.Char(2)
  toolName   String?  @map("tool_name") // For tool usage events
  metadata   Json?    // Additional event data
  createdAt  DateTime @default(now()) @map("created_at")

  @@index([createdAt])
  @@index([path])
  @@index([sessionId])
  @@index([userId])
  @@index([event])
  @@map("analytics_events")
}

// Aggregated daily stats for faster queries
model analytics_daily {
  id             String   @id @default(uuid())
  date           DateTime @db.Date
  path           String
  pageviews      Int      @default(0)
  uniqueSessions Int      @default(0) @map("unique_sessions")
  avgDuration    Float?   @map("avg_duration")

  @@unique([date, path])
  @@index([date])
  @@map("analytics_daily")
}
